#include <stdio.h>

int p(int n){
    if(n>0) return p(p-1)+1;
    if(n==0) return 0;
    //exceçao (n<0);
    return 0;
}

int pIt(int n){
    int andares =0;
    for(int i=1; i<=n; i++){
        andares +=1;
    }
    return andares;
}

int main(){
    int rec=p(3);
    int It=pIt(3);

    printf("rec: %d")
}

//def recursivo
//p(n)={P(N-1)*2, N>1
//     {2, n=1
int p(int n){
    if(n>1) return p(n-1)*2;
    if (n==1) return 2;
    //exceção (n<1)
    return 0;
}
